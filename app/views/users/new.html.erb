<br><br><br><br>
<% provide(:title,"Sign up") %>

	<div class="container">
		<h2>Qiitaへようこそ</h2>
		<p>新規登録(無料)して利用を開始しましょう。</p>
		
		<div class="form-error">
			<% @user.errors.full_messages.each do |message| %>
				<div><%= message %></div>
			<% end %>
		</div>
	

		<%= form_for(@user) do |f| %>
			<%= f.label :name,"名前" %>
			<%= f.text_field :name , :placeholder => "ユーザー名"%>

			<%= f.label :email,"Eメール" %>
			<%= f.text_field :email, :placeholder => "メールアドレスを入力してください"%>

			<%= f.label :password,"パスワード" %>
			<%= f.password_field :password, :placeholder => "パスワードを設定してください（半角英数字で6文字以上）"%>

			<%= f.label :password_confirmation,"パスワード確認欄" %>
      		<%= f.password_field :password_confirmation, :placeholder => "再度パスワードを入力してください" %>

			<br><br>

			<%= f.submit "新規登録", class: "btn btn-success" %>
		<% end %>


	</div>

