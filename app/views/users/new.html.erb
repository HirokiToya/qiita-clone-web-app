<br><br><br><br>

	<div class="container">
		<h2>Qiitaへようこそ</h2>
		<p>新規登録(無料)して利用を開始しましょう。</p>
		
		<div class="form-error">
			<% @user.errors.full_messages.each do |message| %>
				<div><%= message %></div>
			<% end %>
		</div>
	

		<%= form_for(@user) do |f| %>
			<%= f.label :name %>
			<%= f.text_field :name , :placeholder => "ユーザー名"%>

			<%= f.label :email %>
			<%= f.text_field :email, :placeholder => "メールアドレス"%>

			<%= f.label :password %>
			<%= f.password_field :password, :placeholder => "パスワード"%>

			<%= f.label :password_confirmation %>
      		<%= f.password_field :password_confirmation, :placeholder => "パスワード確認" %>

			<br><%= f.submit "新規登録", class: "btn btn-success" %>
		<% end %>


	</div>

