

	<div class="container">
		<div class="form-error">
			<br><br><br><br><% @user.errors.full_messages.each do |message| %>
				<div><%= message %></div>
			<% end %>
		</div>
	
		<h2>Qiitaへようこそ</h2>
		<p>新規登録(無料)して利用を開始しましょう。</p>

		<%= form_for(@user) do |f| %>
			<div><%= f.label :name %></div>
			<div><%= f.text_field :name , :placeholder => "ユーザー名"%></div>

			<div><%= f.label :email %></div>
			<div><%= f.text_field :email, :placeholder => "メールアドレス"%></div>

			<div><%= f.label :password %></div>
			<div><%= f.text_field :password, :placeholder => "パスワード"%></div>

			<br><%= f.submit "新規登録", class: "btn btn-success" %>
		<% end %>


	</div>

