<% provide(:title, @user.name) %>

	<%= gravatar_for @user,size:200%>
	<h3><%= @user.name %></h3>


<!--<h2> <%= @user.name %></h2>-->
<h5><%= @user.email %></h5>
<h5><%= @user.self_introduction %></h5>

<% if @user.id == @current_user.id %>
	<p><%= link_to("編集", "/users/#{@user.id}/edit") %></p>
<% end %>

<ul class="user-tabs">
	<li><%= link_to("投稿した記事","/users/#{@user.id}")%></li>
	<li><%= link_to("ストック一覧","#")%></li>
</ul>

<% @articles.each do |article| %>
	<div class="article-index-item">
		<div class="article-left">
			<%= gravatar_for @user,size:50%>
		</div>
		<div class="article-right">
			<%= link_to(article.title,"/articles/#{article.id}") %>
		</div>
	</div>
<% end %>


	