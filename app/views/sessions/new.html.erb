<br><br><br><br>
<% provide(:title,"Log in") %>

<div class="container">
	<h2>Qiitaにログイン</h2>
	
	<% if @error_message %>
		<div class="form-error">
			<%= @error_message %>
		</div>
	<% end %>
	
	<%= form_for(:session, url:login_path) do |f| %>
		<div><%= f.label :email %></div>
		<div><%= f.email_field :email, :placeholder =>"メールアドレス" %></div>

		<div><%= f.label :password %></div>
		<div><%= f.password_field :password, :placeholder => "パスワード" %></div>

		<div><br><%= f.submit "ログイン", class: "btn btn-success" %></div>

	<% end %>
	<br><p>Qiitaのアカウントを持っていない場合は <%= link_to "新規登録" , signup_path %>から</p>

</div>

