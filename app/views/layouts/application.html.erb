<!DOCTYPE html>
<html>
  <head>
    <title>QiitaClone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
  	<header>
  		<div class="header-logo">
  			<%= link_to("ホーム",root_url) %>
  		</div>
  		<ul class="header-menus">
        <% if logged_in? %>

          <li><%= link_to (@current_user.name), current_user %></li>
          <li><%= link_to "投稿する", "/articles/new" %></li>
          <li><%= link_to "投稿一覧", "/articles/index" %></li>
          <li><%= link_to("ストック一覧","/users/#{@current_user.id}/stocks") %></li>
          <li><%= link_to "ログアウト", logout_path, method: :delete %></li> 
        <% else%>
          <li><%= link_to("ユーザー登録", "/signup") %></li>
          <li><%= link_to("ログイン","/login")%></li>
        <% end %>
  		</ul>

      

  	

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    </header>


    <%= yield %>
  </body>
</html>
