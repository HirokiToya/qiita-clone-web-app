<!DOCTYPE html>
<html>
  <head>
    <title>QiitaClone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
  	<header>
  		<div class="header-logo">
  			<%= link_to("QiitaClone",root_url) %>
  		</div>
  		<ul class="header-menus">
        <% if logged_in? %>

          <li><%= link_to "ユーザー", current_user %></li>
          <li><%= link_to "投稿記事一覧", current_user %></li>
          <li><%= link_to "編集", "#" %></li>
          <li><%= link_to "Log out", logout_path, method: :delete %></li> 
        <% else%>
          <li><%= link_to("ユーザー登録", "/signup") %></li>
          <li><%= link_to("ログイン","/login")%></li>
        <% end %>
  		</ul>

  	</header>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>


    <%= yield %>
  </body>
</html>
