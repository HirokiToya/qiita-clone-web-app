<div class="main articles-show">
  
  <div class="container">
    <div class="articles-show-item">

        <div class="article-user-name">
          <%= link_to gravatar_for(@article.user,size: 50),@article.user %><br>
          <h5><%= @article.user.name %></h5>
          <%= @article.created_at %>
          
        </div>
       

        <div><h3><%= @article.title %></h3></div>       

        <% @article.tag_list.each do |tag| %>
          <span class="label label-primary">
             <%= link_to tag, tag_path(tag) %>
          </span>  
        <% end %> 
      
        <div><br><p><%= @article.content %></p></div>

      
    </div>
  </div>

  <% if @article.user_id == @current_user.id %>
    <div class="article-menus">
      <p><%= link_to("編集", "/articles/#{@article.id}/edit") %></p>
      <p><%= link_to("削除", "/articles/#{@article.id}/destroy", {method: "article"}) %></p>
    </div>
  <% end %>

</div>


