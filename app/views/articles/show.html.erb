<div class="main articles-show">
  
  <div class="container">
    <div class="articles-show-item">

      <p><%= @article.title %></p>
      <p><%= @article.content %></p>
      <div class="post-time ">
        <%= @article.created_at %>
      </div>
    </div>
  </div>

  <% if @article.user_id == @current_user.id %>
    <div class="article-menus">
      <%= link_to("編集", "/articles/#{@article.id}/edit") %>
      <%= link_to("削除", "/articles/#{@article.id}/destroy", {method: "article"}) %>
    </div>
  <% end %>

</div>


