<% provide(:title,"投稿一覧") %>

<div class="container">
  <div class="main">
    <div class="search-form-body">
      <%= search_form_for @q do |f| %>     
        <%= f.search_field :title_cont, class: "search-form", :placeholder => "キーワードを入力" %>
        <span><%= f.submit "検索", class: "search-btn btn-success" %></span>
      <% end %>
    </div>
    <%= render 'shared/posts_index', object: @articles %>
  </div>
</div>

