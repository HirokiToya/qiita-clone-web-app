<div class="main posts-index">
  <div class="container">
    <% @articles.each do |article| %>
      <div class="articles-index-item">
      	
		<div class="article-title">
      		<p><%= link_to(article.title , "/articles/#{article.id}" ) %></p>
     	 </div>
     	 <div class="article-user-name">
     	 	<%= link_to gravatar_for(article.user,size: 100),article.user %>
     	 	<%= article.user.name %>
     	 </div>


      </div>
    <% end %>
  </div>
</div>