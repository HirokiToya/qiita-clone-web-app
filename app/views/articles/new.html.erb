<div class="main article-new">
	<div class="container">
		<br><br><br><h2 class="form-heading">投稿する</h2>
		<%= form_tag("/articles/create") do %>
			<div class="form">
				<div class="form-body">
					<% @article.errors.full_messages.each do |message| %>
						<div class="form-error">
							<%= message %>
						</div>
					<% end %>

					<div><input type="text" name="title" placeholder="タイトル"><%= @article.title %></div>

					<div> 
						<input type="text" name="tag_list" placeholder="プログラミング技術に関するタグをカンマ区切りで入力"><%= @article.tag_list %>
					</div>


					<div><textarea type="text" name="content" placeholder="プログラミング知識を共有しよう！"><%= @article.content %></textarea></div>
					<div><br><input type="submit" class="btn btn-success" value="投稿"></div>
				</div>
			</div>
		<% end %>
	</div>
</div>



