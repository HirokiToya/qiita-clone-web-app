<div class="main articles-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/articles/#{@article.id}/update") do %>
      <div class="form">
        <div class="form-body">
          <% @article.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>

          <div><textarea name="title"><%= @article.title %></textarea></div>
          <div><textarea name="tag_list"><%= @article.tag_list%></textarea></div>
          <div><textarea name="content"><%= @article.content %></textarea></div>
          <input type="submit" value="保存">
        </div>
      </div>
    <% end %>
  </div>
</div>